{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build frontend",
            "type": "shell",
            "command": "npm run build",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build tweety",
            "type": "shell",
            "command": "go build -o tweety",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build",
            "dependsOn": [
                "build frontend",
                "build tweety"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
