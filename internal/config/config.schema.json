{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "theme": {
            "type": "string"
        },
        "themeDark": {
            "type": "string"
        },
        "env": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z_]+[a-zA-Z0-9_]*$": {
                    "type": "string"
                }
            }
        },
        "defaultProfile": {
            "type": "string"
        },
        "profiles": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/profile"
            }
        }
    },
    "definitions": {
        "profile": {
            "type": "object",
            "required": [
                "path"
            ],
            "properties": {
                "path": {
                    "type": "string"
                },
                "args": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "env": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-zA-Z_]+[a-zA-Z0-9_]*$": {
                            "type": "string"
                        }
                    }
                },
                "icon": {
                    "type": "string",
                    "maxLength": 1
                }
            }
        }
    }
}
